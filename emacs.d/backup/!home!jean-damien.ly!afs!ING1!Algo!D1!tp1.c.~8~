#include <stdio.h>
#include <math.h>

unsigned int_width(int i)
{
    if (i == 0)
        return 1;
    unsigned res = 0;
    if (i < 0)
    {
        i = -i;
        res++;
    }
    while (i != 0)
    {
        i = i / 10;
        res++;
    }
    return res;
}

unsigned ints_width(const int* tab, unsigned count)
{
    int max_pos = 0;
    unsigned res = 0;
    for (unsigned i = 1; i < count; ++i)
    {
        int current = tab[i];
        if (current < 0)
            current = -current * 10;
        if (current > tab[max_pos])
            max_pos = i;

    }
    res += int_width(tab[max_pos]);
    return res;
}

int main(void)
{
    int a[] = {
        1, 2, 3, 4, 5, 6, 13, -35, 129, -4, 123, -4555, 1341, 2432, 111, 0, 1230
    };
    printf("%d\n", ints_width(a, sizeof(a)/sizeof(*a)));
    a[3] = 99999999;
    printf("%d\n", ints_width(a, sizeof(a)/sizeof(*a)));
}