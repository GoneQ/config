#include <stdio.h>
#include <math.h>
#include <string.h>
#include <assert.h>
#include <stdlib.h>
#include <time.h>
#include <stdbool.h>

unsigned int_width(int i)
{
    if (i == 0)
        return 1;
    unsigned res = 0;
    if (i < 0)
    {
        i = -i;
        res++;
    }
    while (i != 0)
    {
        i = i / 10;
        res++;
    }
    return res;
}

