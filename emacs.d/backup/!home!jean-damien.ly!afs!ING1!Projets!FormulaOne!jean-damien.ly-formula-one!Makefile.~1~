CC ?= gcc
CFLAGS = -std=c99 -pedantic -Wextra -Werror -Wall -g -I./
SRCS = $(wildcard src/*.c)
OBJS = $(SRCS:.c=.o)
EXEC = myfind

all: $(EXEC)

check: CFLAGS += -fsanitize=address

check: LDFLAGS += -lasan

check: $(EXEC)
	tests/test.sh

$(EXEC): $(OBJS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJS) -o $(EXEC)

$(OBJS): $(SRCS)

clean:
	rm $(EXEC) $(OBJS)

.PHONY: all clean