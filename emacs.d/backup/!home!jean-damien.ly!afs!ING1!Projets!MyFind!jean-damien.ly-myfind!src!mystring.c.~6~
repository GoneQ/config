#include "myfind.h"

size_t my_strlen(char *s)
{
    size_t i = 0;
    for (; s[i] != '\0'; i++);
    return i;
}

char *my_strncpy(char *d, char *s, size_t n)
{
    size_t i = 0;
    for (; ((i < n) && (s[i] != '\0')); i++)
        d[i] = s[i];
    d[i] = '\0';
    return d;
}

int my_strcmp(char *a, char *b)
{
    int i = 0;
    while ((a[i] != '\0') && (b[i] != '\0') && (a[i] == b[i]))
    {
        i++;
    }
    if (a[i] != b[i])
        return 1;
    return 0;
}

char *my_strcat(char *d, char *s)
{
    int ls = my_strlen(s);
    int ld = my_strlen(d);
    int len = ld + ls;
    char *new = calloc(1, len);
    int i = 0;
    for (; i < ld; i++)
        new[i] = d[i];
    if (new[i - 1] != '/')
    {
        new[i] = '/';
        i++;
    }
    int j = i;
    for (; (j - i) < ld; j++)
    {
        new[j] = s[j - i];
    }
    new[j] = '\0';
    return new;
}