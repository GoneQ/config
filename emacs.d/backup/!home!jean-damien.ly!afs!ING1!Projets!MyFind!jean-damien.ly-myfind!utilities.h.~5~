#ifndef UTILITIES_H
#define UTILITIES_H

#include "myfind.h"

enum type
{
    AND,
    OR,
    NOT,
    ELSE
};

struct node
{
    enum type type;
    int start;
    int end;
    struct node *left;
    struct node *right;
    int not;
    int max;
}
    
int check_type(char *cur, char *filename, char c);
int is_predicate(char *s);
void first_print(char *s, int argc, char *argv[]);
void free_tree(struct node *tree);
int got_express(int argc, char *argv[]);
struct node *free_and_return(struct node *r1, struct node *r2,
                             struct node *r3, struct node *r4);

#endif /*!UTILITIES_H*/