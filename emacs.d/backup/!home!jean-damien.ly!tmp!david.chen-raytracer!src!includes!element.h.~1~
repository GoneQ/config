#ifndef VECTOR3_H
#define VECTOR3_H

#include <stdlib.h>
#include <math.h>
#include "libparser.h"
#include "element.h"

vec3_t *vector_init(double x, double y, double z);
void vector_free(vec3_t *vect1, vec3_t *vect2, vec3_t *vect3, vec3_t *vect4);
vec3_t *vector_copy(vec3_t *vector);
void vector_update(vec3_t *vector, double x, double y, double z);
vec3_t *vector_add(vec3_t *vector1, vec3_t *vector2);
vec3_t *vector_sub(vec3_t *vector1, vec3_t *vector2);
double dot_product(vec3_t *vector1, vec3_t *vector2);
vec3_t *vector_normalize(vec3_t *vector);
double vector_norme(vec3_t *vector);
double vectors_angle(vec3_t *vector1, vec3_t* vector2);
vec3_t *vector_multiply_c(vec3_t *vector, double coef);
vec3_t *vector_div_c(vec3_t *vector, double c);
vec3_t *vector_sub_c(vec3_t *vector, double c);
vec3_t *vector_add_c(vec3_t *vector, double c);
vec3_t *vector_cross_product(vec3_t *vector1, vec3_t *vector2);

#endif /* !VECTOR3_H */
