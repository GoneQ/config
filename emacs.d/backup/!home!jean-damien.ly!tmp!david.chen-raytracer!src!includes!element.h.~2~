#ifndef ELEMENT_H
#define ELEMENT_H

#include "vector.h"

struct vector_group
{
    vec3_t *A;
    vec3_t *B;
    vec3_t *C;
    vec3_t *AB;
    vec3_t *AC;
    double *norm;
    vec3_t *dir;
    double *dotprod;
    vec3_t *point;
};
    
struct vector_group *init_elt(struct scene *scene, int i, int j,
                              struct ray *ray);

void free_elt(struct vector_group *elt);
#endif /* !ELEMENT_H */
